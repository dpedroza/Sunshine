<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="Localização"
        android:key="location"
        android:defaultValue="94045"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="Sistema Métrico"
        android:key="@string/pref_metric_key"
        android:defaultValue="@string/pref_metric_celsius"
        android:entries="@array/pref_unit_options"
        android:entryValues="@array/pref_unit_values"/>

</PreferenceScreen>